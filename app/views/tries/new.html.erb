<%= turbo_frame_tag @try do %>

  <%= turbo_frame_tag id='errors' do %>
    <%= render 'shared/errors', object: @try %>
  <% end %>

  <%= form_with model: @try do |form| %>
    <div>
      <%= form.label :result, t('.my_variant') %><br>
      <%= form.text_field :result, autofocus: true %>
    </div>

    <%= form.hidden_field :position %>
    
    <br>
    <div>
      <%= form.submit t('.try'), class: "btn m-3 btn-primary" %>
    </div>
  <% end %>

<% end %>