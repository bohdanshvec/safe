<h1><%= t('.game_safe') %></h1>

<button class="btn btn-info m-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
  <%= t('.rules_game') %>
</button>

<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <p><%= t('.rules_ap') %></p>

    <p><%= t('.rules_bp') %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-7">

    <div class='my=1'>X X X X</div>

    <% if current_game.present? %>
      <div class='my=1'><%= @current_game.code %> -----id: (<%= @current_game.id %>)</div>

      <div>
        <%= turbo_frame_tag id='results' do %>
          <%= render @tries %>
        <% end %>
      </div>

      <div class='my-3'>

        <%= turbo_frame_tag Try.new do %>
          <div class='my-3'>
            <%= link_to t('.my_variant'), new_try_path, class: "btn btn-primary", data: { turbo_frame: dom_id(Try.new) }  %>
          </div>
        <% end %>
        
      </div>
    <% end %>

  </div>
  <div class="col-md-5">
    <%= turbo_frame_tag id='images' do %>
      <%= image_tag('safe_closed.jpg') %>
    <% end %>
  </div>
</div>


