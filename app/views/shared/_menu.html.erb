<header class="p-3 bg-dark text-white">
  <div class="container">
    <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to t('menu.home'), root_path, class: 'me-4 nav-link px-2 text-white' %></li>
        <li><%= link_to t('menu.new_game'), start_game_path, class: 'me-4 nav-link px-2 text-white' %></li>
        <% if current_user.present? %>
          <li><%= link_to t('menu.unfinished_game'), unfinished_games_users_path, class: 'me-4 nav-link px-2 text-white' %></li>
          <li><%= link_to t('menu.finished_game'), finished_games_users_path, class: 'me-4 nav-link px-2 text-white' %></li>
        <% end %>
      </ul>
      <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
        <% if user_signed_in? %>
          <li class='dropdown'>
            <%= link_to current_user.name, "#", class: 'nav-link px-2 text-white text-decoration-none dropdown-toggle', data: {'bs-toggle': 'dropdown'} %>
            <ul class='dropdown-menu'>
              <li><%= link_to t('menu.edit_profile'), edit_user_path(current_user), class:'dropdown-item' %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to t('menu.log_out'), session_path, class:'dropdown-item', data: {turbo_method: :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('menu.sign_up'), new_user_path, class: 'nav-link px-2 text-white' %></li>          
          <li><%= link_to t('menu.log_in'), new_session_path, class: 'nav-link px-2 text-white' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>